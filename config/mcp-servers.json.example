{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "/path/to/workspace"
      ]
    },
    "google-drive": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-gdrive"],
      "env": {
        "GDRIVE_API_KEY": "your-api-key-here"
      }
    },
    "slack": {
      "command": "node",
      "args": ["/path/to/slack-server/dist/index.js"],
      "env": {
        "SLACK_BOT_TOKEN": "xoxb-...",
        "SLACK_CHANNEL": "general"
      }
    }
  }
}
